{
  "uid": "mongo-dashboard",
  "title": "MongoDB Exporter Dashboard",
  "timezone": "browser",
  "panels": [
    {
      "type": "stat",
      "title": "MongoDB Uptime (seconds)",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "mongodb_mongod_uptime_seconds",
          "format": "time_series",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Connections",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "mongodb_mongod_connections{state=\"current\"}",
          "format": "time_series",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        }
      },
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Memory Usage (MB)",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "mongodb_mongod_mem_resident_bytes / 1024 / 1024",
          "format": "time_series",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes"
        }
      },
      "gridPos": { "x": 0, "y": 4, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Op Counters (Read/Write)",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum(rate(mongodb_mongod_op_counters_total{type=~\"insert|query|update|delete\"}[1m]))",
          "format": "time_series",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      },
      "gridPos": { "x": 6, "y": 4, "w": 6, "h": 4 }
    }
  ],
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s"
}
